<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="10mm"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:id="@+id/list_item_ride_type" />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="30mm"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:id="@+id/list_item_ride_fromto"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_item_ride_type"
        android:layout_toEndOf="@+id/list_item_ride_type" />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="7mm"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:id="@+id/list_item_ride_requests"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_item_ride_fromto"
        android:layout_toEndOf="@+id/list_item_ride_fromto" />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="7mm"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:id="@+id/list_item_ride_joins"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_item_ride_requests"
        android:layout_toEndOf="@+id/list_item_ride_requests" />

</RelativeLayout>
